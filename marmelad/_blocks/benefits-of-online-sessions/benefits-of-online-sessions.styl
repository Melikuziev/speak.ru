.benefits-of-online-sessions
	background-color #f9fdff
	padding-top 40px
	padding-bottom 40px

	&__bg
		background-color rgba(0, 185, 182, 0.1)
		display flex
		flex-direction column
		margin-left -20px
		margin-right -20px
		padding-left 20px
		padding-right 20px
		padding-bottom 40px

	&__img
		align-self center
		width 160px
		height 320px
		margin-top -50px
		margin-bottom 30px

	&__title
		text-align center
		margin-bottom 30px
		br
			display none

	&__list
		list-style none
		margin 0
		padding 0

	&__item
		display flex
		align-items center
		gap 5px
		margin-bottom 20px
		&:last-child
			margin-bottom 0

	&__dot-icon
		width 5px
		height 5px
		flex 0 0 auto
		align-self start
		margin-top 7px

	&__list-title
		font-weight 700
		font-size 18px
		line-height 120%
		color #0E0E0F
		display block
		margin-bottom 5px

	&__list-text
		line-height 140%
		color #0E0E0F
		display block

@media (min-width: $mq.md)
	.benefits-of-online-sessions
		padding-top 50px
		padding-bottom 50px

		&__bg
			margin 0
			padding 0
			border-radius 24px
			flex-direction row
			gap 40px
			justify-content space-between
			padding-left 20px
			padding-right 30px

		&__img
			flex 0 0 auto
			width 176px
			height 352px
			margin-bottom 0
			margin-top -175px

		&__right-side
			padding-top 50px
			padding-bottom 50px

		&__title
			text-align left

@media (min-width: $mq.lg)
	.benefits-of-online-sessions
		&__bg
			padding-right 25px
			padding-left 45px
			gap 65px

		&__img
			width 211px
			height 423px
			margin-top -120px

		&__title
			margin-bottom 40px
			br
				display block

		&__list-title
			font-size 20px

		&__list-text
			font-size 18px

@media (min-width: $mq.xl)
	.benefits-of-online-sessions
		padding-top 140px
		background-position 70px

		&__bg
			padding-top 50px
			padding-bottom 115px

		&__img
			width 270px
			margin-top -174px

		&__right-side
			padding 0
