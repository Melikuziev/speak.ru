.login-btn
	font-weight 600
	font-size 16px
	line-height 1.1
	color #fff
	padding 12px 30px
	text-decoration none
	background linear-gradient(225deg, #00B9B6 0%, #00CDAC 100%)
	box-shadow 0px 15px 30px rgba(220, 232, 243, 0.25)
	border-radius 12px
	display none

@media (min-width: $mq.lg)
	.login-btn
		display block
