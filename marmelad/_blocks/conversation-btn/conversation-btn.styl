.conversation-btn
	font-weight 600
	font-size 12px
	line-height 1.1
	text-decoration none
	color #fff
	padding 8px 15px
	background linear-gradient(225deg, #00B9B6 0%, #00CDAC 100%)
	box-shadow 0px 15px 30px rgba(220, 232, 243, 0.25)
	border-radius 12px
	margin-right 10px

@media (min-width: 360px)
	.conversation-btn
		font-size 12px

@media (min-width: $mq.md)
	.conversation-btn
		padding 8px 25px

@media (min-width: $mq.lg)
	.conversation-btn
		display none
