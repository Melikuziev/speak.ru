.hero
	box-shadow 0 0 0 100vmax #F9FDFF
	clip-path inset(0 -100vmax)
	background-color #F9FDFF
	padding-top 30px
	padding-bottom 46px

@media (min-width: $mq.md)
	.hero
		display flex
		padding-top 50px
		padding-bottom 100px

		&__img
			margin-left -60px

@media (min-width: $mq.lg)
	.hero
		padding-top 90px
		padding-bottom 120px

		&__img
			margin-top -37px
			margin-right -22px

@media (min-width: $mq.xl)
	.hero
		padding-top 122px
		padding-bottom 141px

		&__img
			margin-left -110px
